<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@color/ozel4">

    <ImageView
        android:id="@+id/imgSiapris"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:padding="2dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/screen_background_light"
        tools:layout_editor_absoluteX="122dp" />

    <TextView
        android:id="@+id/txtSiparisAd"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textColor="@color/ozel1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgSiapris"
        app:layout_constraintTop_toTopOf="@+id/imgSiapris" />

    <TextView
        android:id="@+id/txtSiparisFiyat"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:text="Fiyat:"
        android:textAlignment="viewStart"
        android:textColor="@color/ozel1"
        app:layout_constraintStart_toEndOf="@+id/txtSiparisAd"
        app:layout_constraintTop_toTopOf="@+id/txtSiparisAd" />

    <TextView
        android:id="@+id/txtSiparisAdet"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:text="Adet:"
        android:textAlignment="viewStart"
        android:textColor="@color/ozel1"
        app:layout_constraintStart_toEndOf="@+id/txtSiparisFiyat"
        app:layout_constraintTop_toTopOf="@+id/txtSiparisFiyat" />

</androidx.constraintlayout.widget.ConstraintLayout>